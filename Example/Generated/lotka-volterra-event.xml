<?xml version="1.0" encoding="UTF-8"?>
<sbml xmlns="http://www.sbml.org/sbml/level2/version3" level="2" version="3">
  <model id="LotkaVolterra">

    <!-- Definizione delle unità -->
    <listOfUnitDefinitions>
      <unitDefinition id="per_second">
        <listOfUnits>
          <unit kind="second" exponent="-1"/>
        </listOfUnits>
      </unitDefinition>

      <unitDefinition id="per_item_second">
        <listOfUnits>
          <unit kind="item" exponent="-1"/>
          <unit kind="second" exponent="-1"/>
        </listOfUnits>
      </unitDefinition>

    </listOfUnitDefinitions>

    <listOfCompartments>
      <compartment id="cell" size="1" constant="true" />
    </listOfCompartments>

    <!-- Specie -->
    <listOfSpecies>
      <species id="Prey" compartment="cell" initialAmount="10"
               boundaryCondition="false" constant="false" hasOnlySubstanceUnits="false"
               substanceUnits="item"/>
      <species id="Predator" compartment="cell" initialAmount="5"
               boundaryCondition="false" constant="false" hasOnlySubstanceUnits="false"
               substanceUnits="item"/>
    </listOfSpecies>

    <!-- Parametri -->
    <listOfParameters>
      <parameter id="alpha" value="1.1" constant="false" units="per_second"/> <!-- tasso di crescita delle prede -->
      <parameter id="beta" value="0.4" constant="false" units="per_item_second"/> <!-- tasso di successo della caccia -->
      <parameter id="gamma" value="0.4" constant="true" units="per_second"/> <!-- tasso di mortalità naturale -->
    </listOfParameters>

     <!-- Reazioni -->
    <listOfReactions>

      <!-- Reazione 1:   2 Prey -> 3 Prey  (crescita della preda) -->
      <reaction id="PreyGrowth" reversible="false">
        <listOfReactants>
          <speciesReference species="Prey" stoichiometry="1"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="Prey" stoichiometry="2"/>
        </listOfProducts>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci>alpha</ci>
              <apply>
                <power/>
                <ci>Prey</ci>
                <cn type="integer">1</cn>
              </apply>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

      <!-- Reazione 2: Prey + Predator -> 2*Predator (predatore consuma la preda e si riproduce) -->
      <reaction id="Predation" reversible="false">
        <listOfReactants>
          <speciesReference species="Prey" stoichiometry="1"/>
          <speciesReference species="Predator" stoichiometry="1.1"/>
        </listOfReactants>
        <listOfProducts>
          <speciesReference species="Predator" stoichiometry="2"/>
        </listOfProducts>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci>beta</ci>
              <apply>
                <power/>
                <ci>Prey</ci>
                <cn type="integer">1</cn>
              </apply>
              <apply>
                <power/>
                <ci>Predator</ci>
                <cn type="real">1.1</cn>
              </apply>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

      <!-- Reazione 3: Predator ->   (morte del predatore) -->
      <reaction id="PredatorDeath" reversible="false">
        <listOfReactants>
          <speciesReference species="Predator" stoichiometry="1"/>
        </listOfReactants>
        <kineticLaw>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <times/>
              <ci>gamma</ci>
              <apply>
                <power/>
                <ci>Predator</ci>
                <cn type="integer">1</cn>
              </apply>
            </apply>
          </math>
        </kineticLaw>
      </reaction>

    </listOfReactions>

    <!-- Eventi -->
    <listOfEvents>

      <!-- Evento 1: aumento di alpha se Prey < 10 -->
      <event id="IncreasePreyGrowth">
        <trigger>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <lt/>
              <ci>Prey</ci>
              <cn type="integer">10</cn>
            </apply>
          </math>
        </trigger>
        <listOfEventAssignments>
          <eventAssignment variable="alpha">
            <math xmlns="http://www.w3.org/1998/Math/MathML">
              <cn type="real">3.5</cn>
            </math>
          </eventAssignment>
        </listOfEventAssignments>
      </event>

      <!-- Evento 2: riduzione di beta se Predator > 20 -->
      <event id="ReducePredationRate">
        <trigger>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <gt/>
              <ci>Predator</ci>
              <cn type="integer">20</cn>
            </apply>
          </math>
        </trigger>
        <listOfEventAssignments>
          <eventAssignment variable="beta">
            <math xmlns="http://www.w3.org/1998/Math/MathML">
              <cn type="real">0.2</cn>
            </math>
          </eventAssignment>
        </listOfEventAssignments>
      </event>

      <!--<event id="ReducePredationRate">
        <trigger>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <apply>
              <gt/>
              <ci>Predator</ci>
              <cn type="integer">20</cn>
            </apply>
          </math>
        </trigger>
        <listOfEventAssignments>
          <eventAssignment variable="gamma">
            <math xmlns="http://www.w3.org/1998/Math/MathML">
              <apply>
                <plus/>
                <ci>gamma</ci>
                <ci>alpha</ci>
                <cn type="real">0.2</cn>
              </apply>
            </math>
          </eventAssignment>
        </listOfEventAssignments>
      </event>-->

    </listOfEvents>

  </model>
</sbml>
